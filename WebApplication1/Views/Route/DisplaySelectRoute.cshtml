@model WebApplication1.ViewModels.SaveFavoriteRouteViewModel
@{
}
<div class="row">
    <div class="col-2 menu">
        <form asp-controller="Route" asp-action="SaveFavoriteRoute" method="post">
            <input id="two" type="button" value="Find Routes" onclick="location.href='@Url.Action("Index", "Route")'" />
            <input type="hidden" asp-for="UserID" value="@ViewBag.UserID" />
            <input type="hidden" asp-for="RouteID" value="@ViewBag.RouteID" />
            <input id="two" type="submit" value="Save Route/Favorite" onclick="location.href='@Url.Action("SaveFavoriteRoute", "Route")'" />
            
        </form>
        <form asp-controller="Route" asp-action="EnterReview" method="post">
            <input type="hidden" asp-for="UserID" value="@ViewBag.UserID" />
            <input type="hidden" asp-for="RouteID" value="@ViewBag.RouteID" />
            <input id="two" type="submit" value="Add Review" onclick="location.href='@Url.Action("AddReview", "Route")'" />

        </form>
    </div>
    <div class="col-1">

    </div>
    <div class="welcomeClass">
        <div class="col-6">
            
            @if (ViewBag.MapUrl != null)
            {
                <iframe width="580" height="420" frameborder="0" style="border:0" src="@ViewBag.MapUrl"></iframe>
            }

        </div>

        <div class="col-3">

        </div>
    </div>
</div>

<div class="row">
    <div class="col-3 menu">
    </div>


    <div class="col-6">
        @foreach (Review review in ViewBag.Reviews)
        {
            <p>@review.Rating</p>
            <p>@review.ReviewBody</p>
            <p>@review.ReviewByUser</p>
            <hr />
        }
    </div>
    <div class="col-3">
    </div>
</div>
<br />