@{
}
@model WebApplication1.ViewModels.SubmitRouteViewModel
<div class="row">
    <div class="col-2 menu">
        <form asp-controller="Route" asp-action="SubmitRoute" method="post">
            <input id="two" type="button" value="No, Try Again." onclick="location.href='@Url.Action("SaveRoute", "Route")'" />
            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />

            <input id="two" type="submit" value="Yes, Save Route!" onclick="location.href='@Url.Action("SubmitRoute", "Route")'" />
        </form>
    </div>
    <div class="col-1">

    </div>
    <div class="welcomeClass">
        <div class="col-6">

            @if (ViewBag.MapUrl != null)
            {
                <iframe width="580" height="420" frameborder="0" style="border:0" src="@ViewBag.MapUrl"></iframe>
            }

        </div>

        <div class="col-3">

        </div>
    </div>
</div>

<div class="row">
    <div class="col-3 menu">
    </div>


    <div class="col-6">
        <p><b>Rating:</b> @ViewBag.Rating</p>
        <p><b>Review:</b> @ViewBag.ReviewBody</p>
        <p><b>Submitted by:</b> @ViewBag.ReviewByUser</p>
    </div>
    <div class="col-3">
    </div>
</div>
<br />