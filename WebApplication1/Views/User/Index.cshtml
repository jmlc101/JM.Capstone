@model WebApplication1.ViewModels.ProfileViewModel

<div class="row">
    <div class="col-2 menu">
        <ul>
            <li><input id="two" type="button" value="Trail Blaze!" onclick="location.href='@Url.Action("SaveRoute", "Route")'" /></li>
            <li><input id="two" type="button" value="Find Routes" onclick="location.href='@Url.Action("Index", "Route")'" /></li>
            <li><input id="two" type="button" value="Favorite Routes" onclick="location.href='@Url.Action("DisplayFavorites", "User")'" /></li>
            <li><input id="two" type="button" value="Friends" )'" /></li>
            <li><input id="two" type="button" value="Mail" onclick="location.href='@Url.Action("DisplayMail", "User")'" />@ViewBag.NewMessageAlert</li>
            <li><input id="two" type="button" value="LogOff" onclick="location.href='@Url.Action("LogOff", "User")'" /></li> <!-- TODO - Thank you https://stackoverflow.com/questions/2503923/html-button-calling-an-mvc-controller-and-action-method -->
        </ul>
    </div>
    <div class="col-1">

    </div>

    <div class="col-6">
        @if  (ViewBag.DbSubmissionAlert != null)
        {
            <div class="error-alert">
            @ViewBag.DbSubmissionAlert
            </div>

        }
            @if (ViewBag.Favorites != null)
            {
                <div class="box">
                <table>
                @foreach (Route route in ViewBag.FavoriteRoutes)
                {
                    <tr>
                        <td>
                            <a asp-controller="Route" asp-action="DisplaySelectRoute" asp-route-id="@route.ID">@route.RouteName</a>
                        </td>
                        <td>
                            <a asp-controller="Route" asp-action="RemoveFavoriteRoute" asp-route-id="@route.ID">Remove</a>
                        </td>
                    </tr>

                }
                </table>
                </div>
            }

        @if (ViewBag.MailList != null)
            {
                <div class="box">
                    @foreach (Message message in ViewBag.MailList)
                    {
                        <p>@message.CreationTime</p>
                        <p>@message.Body</p>

                        <p>From: <a asp-controller="User" asp-action="Profile" asp-route-screenname="@message.SenderScreenName">@message.SenderScreenName</a></p>
                        <form asp-controller="User" asp-action="WriteMessage" method="post">
                            <input type="hidden" asp-for="ProfileUserScreenName" value="@message.SenderScreenName" />
                            <input id="three" type="submit" value="Reply" />
                        </form>
                        <a id="three" asp-controller="User" asp-action="RemoveMail" asp-route-id="@message.ID">Remove</a>
                            <hr />
                    }
                </div>

            }
    </div>

    <div class="col-3">

    </div>
</div>


<div class="row">
    <div class="col-3 menu">
    </div>
    <div class="col-6">


    </div>

    <div class="col-3">

    </div>
</div>